{
  "manifest_version": 3,
  "name": "Amazon Return Policy Checker",
  "version": "1.0",
  "description": "Shows return policy information on Amazon search results",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "*://*.amazon.in/*",
    "*://*.amazon.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.in/s*",
        "*://*.amazon.com/s*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Amazon Return Policy Checker"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}